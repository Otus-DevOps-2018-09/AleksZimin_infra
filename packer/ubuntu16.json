{
    "variables": {
        "project_id": null,
        "source_image_family": null,
        "image_family":"reddit-base",
        "zone": "europe-west1-b", 
        "ssh_username":null,       
        "machine_type": "f1-micro",
        "disk_size": "10",
        "disk_type": "pd-standard",
        "image_description": "ZAV images for test reddit application",
        "network":"default",
        "network_tags": "puma-server"
        },
    "sensitive-variables": ["project_id", "source_image_family", "ssh_username"],

    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{ user `project_id` }}",
            "image_name": "{{ user `image_family` }}-{{timestamp}}",
            "image_family": "{{ user `image_family` }}",
            "source_image_family": "{{ user `source_image_family` }}",
            "zone": "{{ user `zone` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "machine_type": "{{ user `machine_type` }}",
            "disk_size": "{{ user `disk_size` }}",
            "disk_type": "{{ user `disk_type` }}",
            "image_description": "{{ user `image_description` }}",
            "network":"{{ user `network` }}",
            "tags": "{{ user `network_tags` }}"
        }
    ],
	    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
		    {
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        }
    ]
}
